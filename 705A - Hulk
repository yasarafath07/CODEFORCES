#include<bits/stdc++.h>
using namespace std;

int main(){
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    int n; // 'n' layers
    cin>>n;

    cout<<"I hate ";

    // traverse
    for(int i=1; i<n; i++){
        if(i%2 == 1){
            cout<<"that I love ";
        }
        else{
            cout<<"that I hate ";
        }
    }
    cout<<"it"<<endl;
}
