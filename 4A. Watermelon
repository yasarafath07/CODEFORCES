#include<bits/stdc++.h>
 
using namespace std;
 
int main(){
    int w;  // weight of the watermelon
    // take the input weight from the user
    cin>>w;
    
    // if we can divide the weight w into 2 equal parts, print YES, else print NO
    if(w>2){
        if(w%2 == 0){
        cout<<"YES"<<endl;
        }
        else{
            cout<<"NO"<<endl;
        }
    }
    else{
        cout<<"NO"<<endl;
    }
    
 
}
